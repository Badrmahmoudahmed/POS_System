<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="POS_System.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:v ="clr-namespace:POS_System.Pages"
    Shell.FlyoutBehavior="Locked"
    Shell.FlyoutBackgroundColor="WhiteSmoke"
    Shell.FlyoutWidth="60"
    Shell.NavBarIsVisible="False"
    Title="POS_System">

    <FlyoutItem Title="Home"  Icon="home.png" >
        <ShellContent
        ContentTemplate="{DataTemplate v:MainPage }"
        Route="MainPage" />
    </FlyoutItem>
    <FlyoutItem Icon="menu.png" Title="Menueitem">
        <ShellContent 
        ContentTemplate="{DataTemplate v:Menueitem}"
        Route="Menueitem"/>
    </FlyoutItem>

    <FlyoutItem Title="Orders" Icon="grid.png">
        <ShellContent
        ContentTemplate="{DataTemplate v:Orders}"       
        Route="Orders"/>
    </FlyoutItem>


    <Shell.FlyoutFooter>
        <Image Source="phonecall.png"
               WidthRequest="20"
               HeightRequest="20"
               Margin="0,0,0,40"/>
    </Shell.FlyoutFooter>



</Shell>
